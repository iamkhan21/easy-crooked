{
  "name": "easy-crooked",
  "version": "0.0.2-development",
  "private": false,
  "description": "JavaScript library for converting HTML into Markdown",
  "keywords": [
    "converter",
    "html",
    "markdown",
    "md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/iamkhan21/easy-crooked.git"
  },
  "license": "MIT",
  "author": "Ivan Khanevich <ivan.khanevich@gmail.com>",
  "sideEffects": false,
  "main": "dist/",
  "module": "lib/",
  "files": [
    "dist/",
    "lib/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "babel lib/ -d dist/ --source-maps --delete-dir-on-start",
    "format": "prettier --write **/*.* && eslint . --fix",
    "lint": "prettier --check **/*.* && eslint .",
    "prepare": "yarn build",
    "semantic-release": "semantic-release",
    "test": "jest --coverage && yarn lint",
    "test:watch": "jest --maxWorkers=25% --watch",
    "update:deps": "yarn upgrade-interactive --latest && yarn upgrade",
    "update:cssdb": "npx browserslist@latest --update-db"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "14"
          }
        }
      ]
    ]
  },
  "prettier": {
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "jest": true,
      "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "plugin:import/recommended"
    ],
    "rules": {
      "arrow-body-style": [
        "error",
        "always"
      ],
      "curly": "error",
      "import/order": [
        "error",
        {
          "newlines-between": "always"
        }
      ]
    }
  },
  "jest": {},
  "dependencies": {
    "html-dom-parser": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "7.15.7",
    "@babel/core": "7.15.8",
    "@babel/preset-env": "7.15.8",
    "@types/jest": "27.0.3",
    "babel-eslint": "10.1.0",
    "babel-jest": "27.1.1",
    "eslint": "8.28.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.1.4",
    "jest": "27.1.1",
    "jest-date-mock": "1.0.8",
    "prettier": "2.4.1",
    "prettier-plugin-packagejson": "2.2.17",
    "semantic-release": "17.4.7",
    "semantic-release-cli": "5.4.4"
  },
  "renovate": {
    "extends": [
      "config:js-lib",
      ":automergePatch",
      ":automergeBranch",
      ":automergePatch",
      ":automergeBranch",
      ":automergeLinters",
      ":automergeTesters",
      ":automergeTypes"
    ]
  }
}
